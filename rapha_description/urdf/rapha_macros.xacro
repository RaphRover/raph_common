<?xml version="1.0" encoding="utf-8"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="$(find rapha_description)/urdf/include/oak_macro.xacro"/>
  <xacro:include filename="$(find rapha_description)/urdf/include/laser_macro.xacro"/>

  <xacro:macro name="rapha" 
               params="footprint_link:=true
                       link_prefix:=''
                       joint_prefix:=''
                       imu_translation:='-0.128 0 -0.0393'">
    <!--TODO specify accurate imu translation-->

    <xacro:oak_camera parent="${link_prefix}base_link" base_frame="${link_prefix}oak_base_frame">
      <origin xyz="-0.05642 0.0 -0.076218" rpy="0 0 0" />
    </xacro:oak_camera>

    <xacro:rplidar_s3 parent="${link_prefix}base_link">
      <origin xyz="-0.062106 0.0 0.011588" />
    </xacro:rplidar_s3>

    <xacro:macro name="servo_link" params="name">
      <link name="${link_prefix}servo_${name}_link">
        <visual>
          <origin xyz="0 0 0" rpy="0 0 ${pi/2}"/>
          <geometry>
            <mesh filename="package://rapha_description/models/servo.dae"/>
          </geometry>
        </visual>
        <collision>
          <origin xyz="0 0 0" rpy="0 0 0"/>
          <geometry>
            <mesh filename="package://rapha_description/models/servo_outline.stl"/>
          </geometry>
        </collision>
      </link>
    </xacro:macro>

    <xacro:macro name="wheel_link" params="name"> 
      <link name="${link_prefix}wheel_${name}_link">
        <visual>
          <origin xyz="0 0 0" rpy="0 0 ${pi/2}"/>
          <geometry>
            <mesh filename="package://rapha_description/models/wheel.dae"/>
          </geometry>
        </visual>
        <collision>
          <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
          <geometry>
            <cylinder radius="0.091" length="0.088"/>
          </geometry>
        </collision>
      </link>
    </xacro:macro>

    <!-- LINKS -->
    <xacro:if value="${footprint_link}">
      <link name="${link_prefix}base_footprint"/>
    </xacro:if>

    <link name="${link_prefix}base_link">
      <visual>
        <origin xyz="-0.074211 0 -0.031076" rpy="0 0 ${pi/2}"/>
        <geometry>
          <mesh filename="package://rapha_description/models/rapha_base_link.dae"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 -0.031076" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://rapha_description/models/rapha_outline.stl"/>
        </geometry>
      </collision>
    </link>

    <link name="${link_prefix}mounting_plate_frame"/>

    <xacro:servo_link name="l"/>
    <xacro:servo_link name="r"/>

    <xacro:wheel_link name="fl"/>
    <xacro:wheel_link name="rl"/>
    <xacro:wheel_link name="fr"/>
    <xacro:wheel_link name="rr"/>

    <link name="${link_prefix}imu_frame"/>

    <!-- JOINTS -->

    <xacro:if value="${footprint_link}">
      <joint name="${joint_prefix}base_joint" type="fixed">
        <origin xyz="0 0 0.235756" rpy="0 0 0"/>
        <parent link="${link_prefix}base_footprint"/>
        <child link="${link_prefix}base_link"/>
      </joint>
    </xacro:if>

    <joint name="${joint_prefix}servo_l_joint" type="revolute">
      <origin xyz="-0.37943 0.1899 -0.022433" rpy="0 0 0"/>
      <parent link="${link_prefix}base_link"/>
      <child link="${link_prefix}servo_l_link"/>
      <axis xyz="0 0 -1"/>
      <limit effort="100.0" lower="-1.5708" upper="1.5708" velocity="100.0"/>
    </joint>

    <joint name="${joint_prefix}servo_r_joint" type="revolute">
      <origin xyz="-0.37943 -0.1899 -0.022433" rpy="0 0 ${pi}"/>
      <parent link="${link_prefix}base_link"/>
      <child link="${link_prefix}servo_r_link"/>
      <axis xyz="0 0 -1"/>
      <limit effort="100.0" lower="-1.5708" upper="1.5708" velocity="100.0"/>
    </joint>

    <joint name="${joint_prefix}wheel_fl_joint" type="continuous">
      <origin xyz="0 0.19402 -0.144756" rpy="0 0 0"/>
      <parent link="${link_prefix}base_link"/>
      <child link="${link_prefix}wheel_fl_link"/>
      <axis xyz="0 1 0"/>
      <limit effort="2.0" velocity="6.0"/>
      <dynamics friction="0.3125" damping="0.1"/>
    </joint>

    <joint name="${joint_prefix}wheel_rl_joint" type="continuous">      
      <origin xyz="0 0 -0.12392" rpy="0 0 0"/>
      <parent link="${link_prefix}servo_l_link"/>
      <child link="${link_prefix}wheel_rl_link"/>
      <axis xyz="0 1 0"/>
      <limit effort="2.0" velocity="6.0"/>
      <dynamics friction="0.3125" damping="0.1"/>
    </joint>

    <joint name="${joint_prefix}wheel_fr_joint" type="continuous">
      <origin xyz="0 -0.19402 -0.144756" rpy="0 0 ${pi}"/>
      <parent link="${link_prefix}base_link"/>
      <child link="${link_prefix}wheel_fr_link"/>
      <axis xyz="0 -1 0"/>
      <limit effort="2.0" velocity="6.0"/>
      <dynamics friction="0.3125" damping="0.1"/>
    </joint>

    <joint name="${joint_prefix}wheel_rr_joint" type="continuous">
      <origin xyz="0 0 -0.12392" rpy="0 0 0"/>
      <parent link="${link_prefix}servo_r_link"/>
      <child link="${link_prefix}wheel_rr_link"/>
      <axis xyz="0 -1 0"/>
      <limit effort="2.0" velocity="6.0"/>
      <dynamics friction="0.3125" damping="0.1"/> 
    </joint>

    <joint name="${joint_prefix}imu_joint" type="fixed">
      <origin xyz="${imu_translation}" rpy="0 0 0"/>
      <parent link="${link_prefix}base_link"/>
      <child link="${link_prefix}imu_frame"/>
    </joint>

    <joint name="${joint_prefix}mounting_plate_joint" type="fixed">
      <origin xyz="-0.216822 0 0" rpy="0 0 0"/>
      <parent link="${link_prefix}base_link"/>
      <child link="${link_prefix}mounting_plate_frame"/>
    </joint>

  </xacro:macro>

</robot>