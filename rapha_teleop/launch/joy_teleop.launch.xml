<launch version="0.1.1">
  <arg name="joy_dev" default="/dev/input/js0" description="Joystick device path" />

  <arg name="joy_config_file"
    default="$(find-pkg-share rapha_teleop)/config/joy_config.yaml"
    description="Path to the yaml file with parameters for joy_linux_node and rapha_teleop nodes" />

  <node pkg="joy_linux" exec="joy_linux_node">
    <param name="dev" value="$(var joy_dev)" />
    <param from="$(var joy_config_file)" />
  </node>

  <node pkg="rapha_teleop" exec="rapha_teleop">
    <param from="$(var joy_config_file)" />
  </node>
</launch>